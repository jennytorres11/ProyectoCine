<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CinePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.cine.entidad.Cliente</class>
    <class>com.cine.entidad.Actor</class>
    <class>com.cine.entidad.Salas</class>
    <class>com.cine.entidad.PeliculasActor</class>
    <class>com.cine.entidad.TipoPelicula</class>
    <class>com.cine.entidad.Funciones</class>
    <class>com.cine.entidad.Horario</class>
    <class>com.cine.entidad.ReservarFuncion</class>
    <class>com.cine.entidad.Peliculas</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/cine"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="123"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
